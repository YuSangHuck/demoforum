    agent any
    stages {
        stage('hello') {
            steps {
                sh 'echo hello world'
            }
            post {
                success {
                    script {
                        currentBuild.result = 'FAILURE'

                    }

                }

            }
        }
    }
    post {
        always {
            echo currentBuild.currentResult

        }

    }
}